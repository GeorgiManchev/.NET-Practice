<Window x:Class="PDF_CSV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDF_CSV"
        mc:Ignorable="d"
        Title="MainWindow" Height="160" Width="440">
    <StackPanel 
        Orientation="Vertical"
        Margin="2">
        <StackPanel 
            Orientation="Horizontal">
            <TextBox 
                Height="25" 
                Width ="200"
                Margin="2"
                TextWrapping="Wrap"/>
            <Button 
                Content="Select PDF"
                Width="100"
                Margin="2"
                Click="Select"/>
            <Button 
                Content="Convert to CSV"
                Width="100"
                Margin="2"
                Click="Convert"/>
        </StackPanel>
        <TextBlock 
            Margin="2"
            Text="The converted CSV file will be saved in the same directory as the PDF input."/>
    </StackPanel>
</Window>
